<script>
let allCities = [];
let currentView = 'grid';
let sortColumn = null;
let sortDirection = 'asc';

// Fetch cities data
async function loadCities() {
    try {
        const response = await fetch('/api/locations');
        const data = await response.json();
        allCities = data.locations || [];
        renderCities(allCities);
    } catch (error) {
        console.error('Error loading cities:', error);
        document.getElementById('citiesGrid').innerHTML = '<div class="loading"><p>Error loading cities</p></div>';
    }
}

// Render city cards (grid view)
function renderCitiesGrid(cities) {
    const grid = document.getElementById('citiesGrid');

    grid.innerHTML = cities.map(city => \`
        <div class="city-card">
            <div class="city-card-header">
                <span class="governor-badge">\${city.governor?.party || 'Unknown'}</span>
                <h3>\${city.city}</h3>
                <div class="state">\${city.state}</div>
            </div>
            <div class="city-card-body">
                <div class="city-badges">
                    \${city.taxes?.incomeTax === 0 ? '<span class="badge highlight"><i class="fas fa-dollar-sign"></i> No Income Tax</span>' : ''}
                    \${city.climate?.type ? \`<span class="badge"><i class="fas fa-thermometer-half"></i> \${city.climate.type}</span>\` : ''}
                    \${city.firearms?.laws ? \`<span class="badge"><i class="fas fa-shield-alt"></i> \${city.firearms.laws}</span>\` : ''}
                    \${city.marijuana?.status ? \`<span class="badge"><i class="fas fa-leaf"></i> \${city.marijuana.status}</span>\` : ''}
                </div>

                <div class="city-stats">
                    <div class="stat-item">
                        <span class="label">Sales Tax</span>
                        <span class="value">\${city.taxes?.salesTax || 0}%</span>
                    </div>
                    <div class="stat-item">
                        <span class="label">Cost of Living</span>
                        <span class="value">\${city.economy?.costOfLiving || 'N/A'}</span>
                    </div>
                    <div class="stat-item">
                        <span class="label">Gas Price</span>
                        <span class="value">$\${city.economy?.avgGasPrice || 'N/A'}</span>
                    </div>
                    <div class="stat-item">
                        <span class="label">Rainfall</span>
                        <span class="value">\${city.climate?.avgRainfallInches || 0}"</span>
                    </div>
                </div>

                \${city.veteranBenefits ? \`
                    <div class="badge highlight" style="margin-bottom: var(--spacing-md); width: 100%;">
                        <i class="fas fa-star"></i>
                        <span>Veteran Benefits Available</span>
                    </div>
                \` : ''}

                <button class="learn-more">
                    <span>Learn More</span>
                    <i class="fas fa-arrow-right"></i>
                </button>
            </div>
        </div>
    \`).join('');
}

// Sort cities by column
function sortCities(cities, column) {
    const sorted = [...cities].sort((a, b) => {
        let valA, valB;

        switch(column) {
            case 'city':
                valA = a.city || '';
                valB = b.city || '';
                break;
            case 'state':
                valA = a.state || '';
                valB = b.state || '';
                break;
            case 'population':
                valA = a.population || 0;
                valB = b.population || 0;
                break;
            case 'governor':
                valA = a.governor?.party || '';
                valB = b.governor?.party || '';
                break;
            case 'salesTax':
                valA = a.taxes?.salesTax || 0;
                valB = b.taxes?.salesTax || 0;
                break;
            case 'incomeTax':
                valA = a.taxes?.incomeTax || 0;
                valB = b.taxes?.incomeTax || 0;
                break;
            case 'costOfLiving':
                valA = parseFloat(a.economy?.costOfLiving) || 0;
                valB = parseFloat(b.economy?.costOfLiving) || 0;
                break;
            case 'climate':
                valA = a.climate?.type || '';
                valB = b.climate?.type || '';
                break;
            case 'firearms':
                valA = a.firearms?.laws || '';
                valB = b.firearms?.laws || '';
                break;
            case 'marijuana':
                valA = a.marijuana?.status || '';
                valB = b.marijuana?.status || '';
                break;
            case 'lgbtq':
                valA = a.lgbtq?.rank || 999;
                valB = b.lgbtq?.rank || 999;
                break;
            case 'gasPrice':
                valA = a.economy?.avgGasPrice || 0;
                valB = b.economy?.avgGasPrice || 0;
                break;
            case 'rainfall':
                valA = a.climate?.avgRainfallInches || 0;
                valB = b.climate?.avgRainfallInches || 0;
                break;
            case 'snowfall':
                valA = a.climate?.avgSnowfallInches || 0;
                valB = b.climate?.avgSnowfallInches || 0;
                break;
            case 'vetBenefits':
                valA = a.veteranBenefits ? 1 : 0;
                valB = b.veteranBenefits ? 1 : 0;
                break;
            default:
                return 0;
        }

        if (typeof valA === 'string') {
            valA = valA.toLowerCase();
            valB = valB.toLowerCase();
            return sortDirection === 'asc' ? valA.localeCompare(valB) : valB.localeCompare(valA);
        } else {
            return sortDirection === 'asc' ? valA - valB : valB - valA;
        }
    });

    return sorted;
}

// Render table view
function renderCitiesTable(cities) {
    const tbody = document.querySelector('#citiesTable tbody');

    tbody.innerHTML = cities.map(city => \`
        <tr>
            <td><strong>\${city.city}</strong></td>
            <td>\${city.state}</td>
            <td>\${city.population ? city.population.toLocaleString() : 'N/A'}</td>
            <td><span class="table-badge">\${city.governor?.party || 'Unknown'}</span></td>
            <td>\${city.taxes?.salesTax || 0}%</td>
            <td>\${city.taxes?.incomeTax === 0 ? '<span class="table-badge highlight">No Tax</span>' : (city.taxes?.incomeTax || 0) + '%'}</td>
            <td>\${city.economy?.costOfLiving || 'N/A'}</td>
            <td>\${city.climate?.type || 'N/A'}</td>
            <td>\${city.firearms?.laws || 'N/A'}</td>
            <td>\${city.marijuana?.status || 'N/A'}</td>
            <td>\${city.lgbtq?.rank ? '#' + city.lgbtq.rank : 'N/A'}</td>
            <td>$\${city.economy?.avgGasPrice || 'N/A'}</td>
            <td>\${city.climate?.avgRainfallInches || 0}"</td>
            <td>\${city.climate?.avgSnowfallInches || 0}"</td>
            <td>\${city.veteranBenefits ? '<span class="table-badge highlight">Yes</span>' : 'No'}</td>
        </tr>
    \`).join('');
}

// Render cities based on current view
function renderCities(cities) {
    const grid = document.getElementById('citiesGrid');
    const tableWrapper = document.getElementById('citiesTableWrapper');
    const noResults = document.getElementById('noResults');

    if (cities.length === 0) {
        grid.innerHTML = '';
        tableWrapper.querySelector('tbody').innerHTML = '';
        noResults.style.display = 'block';
        return;
    }

    noResults.style.display = 'none';

    // Apply sorting if we're in table view and have a sort column
    let displayCities = cities;
    if (currentView === 'table' && sortColumn) {
        displayCities = sortCities(cities, sortColumn);
    }

    if (currentView === 'grid') {
        renderCitiesGrid(displayCities);
    } else {
        renderCitiesTable(displayCities);
    }
}

// Handle table header clicks for sorting
function handleTableSort(column) {
    if (sortColumn === column) {
        // Toggle direction if clicking same column
        sortDirection = sortDirection === 'asc' ? 'desc' : 'asc';
    } else {
        // New column, default to ascending
        sortColumn = column;
        sortDirection = 'asc';
    }

    // Re-render with current filtered data
    const currentData = getCurrentFilteredCities();
    renderCities(currentData);
}

// Filter cities
function filterCities() {
    const climate = document.getElementById('climateFilter').value;
    const cost = document.getElementById('costFilter').value;
    const tax = document.getElementById('taxFilter').value;
    const firearms = document.getElementById('firearmsFilter').value;
    const marijuana = document.getElementById('marijuanaFilter').value;
    const vetBenefits = document.getElementById('vetBenefitsFilter').checked;

    const filtered = allCities.filter(city => {
        if (climate && city.climate?.type !== climate) return false;
        if (cost && city.economy?.costOfLiving !== cost) return false;
        if (tax && city.taxes?.incomeTax.toString() !== tax) return false;
        if (firearms && city.firearms?.laws !== firearms) return false;
        if (marijuana && city.marijuana?.status !== marijuana) return false;
        if (vetBenefits && !city.veteranBenefits) return false;

        return true;
    });

    renderCities(filtered);
}

// Clear filters
function clearFilters() {
    document.getElementById('climateFilter').value = '';
    document.getElementById('costFilter').value = '';
    document.getElementById('taxFilter').value = '';
    document.getElementById('firearmsFilter').value = '';
    document.getElementById('marijuanaFilter').value = '';
    document.getElementById('vetBenefitsFilter').checked = false;
    renderCities(allCities);
}

// Toggle view
function toggleView(view) {
    currentView = view;
