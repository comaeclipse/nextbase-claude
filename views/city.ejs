<%- include('layout', { body:
`<div class="city-detail-container">
    <div class="city-header-section">
        <div class="breadcrumb">
            <a href="/"><i class="fas fa-home"></i> Home</a>
            <span class="separator">/</span>
            <span>${location.state}</span>
            <span class="separator">/</span>
            <span>${location.city}</span>
        </div>

        <div class="city-hero">
            <div class="city-hero-content">
                <h1>${location.city}, ${location.state}</h1>
                <p class="city-subtitle">${location.county} County</p>
                <div class="city-hero-badges">
                    ${location.stateParty === 'R' ? '<span class="party-badge red">Red State</span>' : location.stateParty === 'D' ? '<span class="party-badge blue">Blue State</span>' : ''}
                    ${location.vaFacilities ? '<span class="va-badge"><i class="fas fa-hospital"></i> VA Clinic Available</span>' : ''}
                    ${location.tech?.hubPresent ? '<span class="tech-badge"><i class="fas fa-laptop-code"></i> Tech Hub</span>' : ''}
                </div>
            </div>
        </div>
    </div>

    <div class="city-content">
        <!-- Quick Stats Overview -->
        <section class="quick-stats">
            <h2>Quick Overview</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-users"></i></div>
                    <div class="stat-info">
                        <span class="stat-label">Population</span>
                        <span class="stat-value">${location.population ? location.population.toLocaleString() : 'N/A'}</span>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-dollar-sign"></i></div>
                    <div class="stat-info">
                        <span class="stat-label">Cost of Living</span>
                        <span class="stat-value">${location.economy?.costOfLiving || 'N/A'}</span>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-shield-alt"></i></div>
                    <div class="stat-info">
                        <span class="stat-label">Crime Index</span>
                        <span class="stat-value">${location.crime?.totalIndex || 'N/A'}</span>
                        <span class="stat-note">Lower is safer</span>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon"><i class="fas fa-thermometer-half"></i></div>
                    <div class="stat-info">
                        <span class="stat-label">Climate</span>
                        <span class="stat-value">${location.climate?.type || 'N/A'}</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Politics & Governance -->
        <section class="detail-section">
            <h2><i class="fas fa-landmark"></i> Politics & Governance</h2>
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="detail-label">State Party</span>
                    <span class="detail-value">${location.stateParty === 'R' ? '<span class="party-badge red">Republican</span>' : location.stateParty === 'D' ? '<span class="party-badge blue">Democratic</span>' : 'N/A'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Governor</span>
                    <span class="detail-value">${location.politics?.governor || 'N/A'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Mayor</span>
                    <span class="detail-value">${location.politics?.mayor || 'N/A'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Election Trend</span>
                    <span class="detail-value">${location.politics?.trend || 'N/A'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">2016 Presidential</span>
                    <span class="detail-value">${location.politics?.election2016?.winner || 'N/A'} (${location.politics?.election2016?.percent || 'N/A'}%)</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">2024 Presidential</span>
                    <span class="detail-value">${location.politics?.election2024?.winner || 'N/A'} (${location.politics?.election2024?.percent || 'N/A'}%)</span>
                </div>
            </div>
        </section>

        <!-- Taxes & Economy -->
        <section class="detail-section">
            <h2><i class="fas fa-money-bill-wave"></i> Taxes & Economy</h2>
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="detail-label">Sales Tax</span>
                    <span class="detail-value">${location.taxes?.salesTax || 0}%</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Income Tax</span>
                    <span class="detail-value">${location.taxes?.incomeTax === 0 ? '<span class="highlight-badge">No Income Tax</span>' : (location.taxes?.incomeTax || 0) + '%'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Cost of Living Index</span>
                    <span class="detail-value">${location.economy?.costOfLiving || 'N/A'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Average Gas Price</span>
                    <span class="detail-value">$${location.economy?.avgGasPrice || 'N/A'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Population Density</span>
                    <span class="detail-value">${location.density ? location.density.toLocaleString() + ' per sq mi' : 'N/A'}</span>
                </div>
            </div>
        </section>

        <!-- Climate & Weather -->
        <section class="detail-section">
            <h2><i class="fas fa-cloud-sun"></i> Climate & Weather</h2>
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="detail-label">Climate Type</span>
                    <span class="detail-value">${location.climate?.type || 'N/A'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Winter Low (Avg)</span>
                    <span class="detail-value">${location.climate?.avgLowWinter ? location.climate.avgLowWinter + '°F' : 'N/A'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Summer High (Avg)</span>
                    <span class="detail-value">${location.climate?.avgHighSummer ? location.climate.avgHighSummer + '°F' : 'N/A'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Snowfall</span>
                    <span class="detail-value">${location.climate?.avgSnowfallInches || 0}"</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Rainfall</span>
                    <span class="detail-value">${location.climate?.avgRainfallInches || 0}"</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Sunny Days/Year</span>
                    <span class="detail-value">${location.climate?.sunnyDays || 'N/A'}</span>
                </div>
            </div>
        </section>

        <!-- Firearms & Rights -->
        <section class="detail-section">
            <h2><i class="fas fa-gavel"></i> Firearms Laws</h2>
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="detail-label">Gifford Score</span>
                    <span class="detail-value">${location.firearms?.giffordScore || 'N/A'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Gun Friendliness</span>
                    <span class="detail-value">${location.firearms?.gunFriendliness || 'N/A'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Permit Laws</span>
                    <span class="detail-value">${location.firearms?.laws || 'N/A'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Permit Required</span>
                    <span class="detail-value">${location.firearms?.permitRequired === false ? 'No' : location.firearms?.permitRequired === true ? 'Yes' : 'N/A'}</span>
                </div>
            </div>
        </section>

        <!-- Social & Culture -->
        <section class="detail-section">
            <h2><i class="fas fa-heart"></i> Social & Culture</h2>
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="detail-label">Marijuana Status</span>
                    <span class="detail-value">${location.marijuana?.status || 'N/A'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">LGBTQ Friendliness Rank</span>
                    <span class="detail-value">${location.lgbtq?.rank ? '#' + location.lgbtq.rank : 'N/A'}</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Tech Hub</span>
                    <span class="detail-value">${location.tech?.hubPresent ? 'Yes' : 'No'}</span>
                </div>
            </div>
        </section>

        <!-- Veteran Benefits -->
        ${location.veteranBenefits || location.vaFacilities ? `
        <section class="detail-section highlight-section">
            <h2><i class="fas fa-star"></i> Veteran Benefits</h2>
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="detail-label">VA Clinic</span>
                    <span class="detail-value">${location.vaFacilities ? '<span class="highlight-badge">Available</span>' : 'Not Available'}</span>
                </div>
                ${location.veteranBenefits?.description ? `
                <div class="detail-item full-width">
                    <span class="detail-label">Additional Benefits</span>
                    <span class="detail-value">${location.veteranBenefits.description}</span>
                </div>
                ` : ''}
            </div>
        </section>
        ` : ''}

        <!-- Back to Home -->
        <div class="back-button-container">
            <a href="/" class="back-button">
                <i class="fas fa-arrow-left"></i> Back to All Cities
            </a>
        </div>
    </div>
</div>

<style>
.city-detail-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--spacing-xl);
}

.breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-lg);
}

.breadcrumb a {
    color: var(--primary-color);
    text-decoration: none;
    transition: var(--transition);
}

.breadcrumb a:hover {
    text-decoration: underline;
}

.breadcrumb .separator {
    color: var(--text-secondary);
}

.city-header-section {
    margin-bottom: var(--spacing-2xl);
}

.city-hero {
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    border-radius: var(--radius-xl);
    padding: var(--spacing-2xl);
    color: white;
}

.city-hero h1 {
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
    font-weight: 700;
}

.city-subtitle {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: var(--spacing-lg);
}

.city-hero-badges {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
}

.party-badge, .va-badge, .tech-badge {
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
}

.party-badge.red {
    background-color: rgba(220, 38, 38, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.party-badge.blue {
    background-color: rgba(37, 99, 235, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.va-badge {
    background-color: rgba(34, 197, 94, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.tech-badge {
    background-color: rgba(168, 85, 247, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.quick-stats {
    margin-bottom: var(--spacing-2xl);
}

.quick-stats h2 {
    font-size: 1.75rem;
    margin-bottom: var(--spacing-lg);
    color: var(--text-color);
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
}

.stat-card {
    background-color: var(--card-bg);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-xl);
    padding: var(--spacing-lg);
    display: flex;
    gap: var(--spacing-md);
    align-items: center;
    transition: var(--transition);
}

.stat-card:hover {
    border-color: var(--primary-color);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--shadow);
}

.stat-icon {
    font-size: 2rem;
    color: var(--primary-color);
}

.stat-info {
    display: flex;
    flex-direction: column;
}

.stat-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: var(--text-secondary);
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-xs);
}

.stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-color);
}

.stat-note {
    font-size: 0.75rem;
    color: var(--text-secondary);
    font-style: italic;
}

.detail-section {
    background-color: var(--card-bg);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-xl);
    padding: var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
}

.detail-section h2 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-lg);
    color: var(--text-color);
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
}

.detail-section h2 i {
    color: var(--primary-color);
}

.detail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-lg);
}

.detail-item {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
}

.detail-item.full-width {
    grid-column: 1 / -1;
}

.detail-label {
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
}

.detail-value {
    font-size: 1rem;
    color: var(--text-color);
    font-weight: 500;
}

.highlight-section {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(16, 185, 129, 0.1));
    border-color: var(--success-color);
}

.highlight-badge {
    display: inline-block;
    padding: var(--spacing-xs) var(--spacing-sm);
    background-color: var(--success-color);
    color: white;
    border-radius: var(--radius-sm);
    font-size: 0.875rem;
    font-weight: 600;
}

.back-button-container {
    margin-top: var(--spacing-2xl);
    text-align: center;
}

.back-button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-md) var(--spacing-xl);
    background-color: var(--primary-color);
    color: white;
    text-decoration: none;
    border-radius: var(--radius-md);
    font-weight: 600;
    transition: var(--transition);
}

.back-button:hover {
    background-color: var(--primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
}

@media (max-width: 768px) {
    .city-hero h1 {
        font-size: 2rem;
    }

    .stats-grid {
        grid-template-columns: 1fr;
    }

    .detail-grid {
        grid-template-columns: 1fr;
    }
}
</style>` }) %>
