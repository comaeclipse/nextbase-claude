<%- include('layout', { body:
`<div class="results-container">
    <div class="results-header">
        <h1>Your Retirement Matches</h1>
        <p>Based on your preferences, here are the top locations we recommend for your retirement.</p>
        <a href="/search" class="refine-button">
            <i class="fas fa-edit"></i>
            <span>Refine Your Search</span>
        </a>
    </div>

    <div class="results-grid">
        <% if (locations && locations.length > 0) { %>
            <% locations.forEach(location => { %>
                <div class="location-card">
                    <div class="location-header">
                        <h3><%= location.name %></h3>
                        <div class="match-score">
                            <span class="score"><%= location.matchScore || 0 %>%</span>
                            <span class="label">Match</span>
                        </div>
                    </div>
                    <div class="location-details">
                        <% if (!location.state_income_tax) { %>
                            <div class="detail-item">
                                <i class="fas fa-dollar-sign"></i>
                                <span>No state income tax</span>
                            </div>
                        <% } %>
                        <% if (location.climate_type) { %>
                            <div class="detail-item">
                                <i class="fas fa-thermometer-half"></i>
                                <span><%= location.climate_type.replace('-', ' ') %> climate</span>
                            </div>
                        <% } %>
                        <% if (location.veteran_tax_benefits) { %>
                            <div class="detail-item">
                                <i class="fas fa-star"></i>
                                <span>Veteran tax benefits</span>
                            </div>
                        <% } %>
                        <% if (location.va_facilities_nearby) { %>
                            <div class="detail-item">
                                <i class="fas fa-hospital"></i>
                                <span>VA facilities nearby</span>
                            </div>
                        <% } %>
                        <% if (location.veteran_population_pct && location.veteran_population_pct > 10) { %>
                            <div class="detail-item">
                                <i class="fas fa-users"></i>
                                <span>Strong veteran community (<%= location.veteran_population_pct %>%)</span>
                            </div>
                        <% } %>
                        <% if (location.constitutional_carry) { %>
                            <div class="detail-item">
                                <i class="fas fa-shield-alt"></i>
                                <span>Constitutional carry</span>
                            </div>
                        <% } %>
                    </div>
                    <div class="location-stats">
                        <% if (location.cost_of_living_index) { %>
                            <div class="stat">
                                <span class="stat-label">Cost of Living (<%= location.cost_of_living_index %>)</span>
                                <div class="stat-bar">
                                    <div class="stat-fill" style="width: <%= Math.max(0, Math.min(100, (150 - location.cost_of_living_index) * 2)) %>%"></div>
                                </div>
                            </div>
                        <% } %>
                        <% if (location.healthcare_quality_score) { %>
                            <div class="stat">
                                <span class="stat-label">Healthcare Quality</span>
                                <div class="stat-bar">
                                    <div class="stat-fill" style="width: <%= location.healthcare_quality_score %>%"></div>
                                </div>
                            </div>
                        <% } %>
                        <% if (location.veteran_population_pct) { %>
                            <div class="stat">
                                <span class="stat-label">Veteran Community</span>
                                <div class="stat-bar">
                                    <div class="stat-fill" style="width: <%= Math.min(100, location.veteran_population_pct * 5) %>%"></div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <% if (location.description) { %>
                        <div class="location-description">
                            <p><%= location.description %></p>
                        </div>
                    <% } %>
                    <button class="learn-more-btn">
                        <span>Learn More</span>
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            <% }); %>
        <% } else { %>
            <div class="no-results">
                <i class="fas fa-search"></i>
                <h3>No locations found</h3>
                <p>Try adjusting your search criteria to find more matches.</p>
                <a href="/search" class="btn btn-primary">
                    <span>Refine Your Search</span>
                    <i class="fas fa-edit"></i>
                </a>
            </div>
        <% } %>
    </div>

    <div class="criteria-summary">
        <h2>Your Search Criteria</h2>
        <div class="criteria-tags">
            <% if (typeof criteria !== 'undefined' && criteria.regions) { %>
                <% if (Array.isArray(criteria.regions)) { %>
                    <% criteria.regions.forEach(region => { %>
                        <span class="criteria-tag"><%= region %></span>
                    <% }); %>
                <% } else { %>
                    <span class="criteria-tag"><%= criteria.regions %></span>
                <% } %>
            <% } %>
            <% if (typeof criteria !== 'undefined' && criteria.climate) { %>
                <span class="criteria-tag"><%= criteria.climate %> climate</span>
            <% } %>
            <% if (typeof criteria !== 'undefined' && criteria.taxes) { %>
                <% if (Array.isArray(criteria.taxes)) { %>
                    <% criteria.taxes.forEach(tax => { %>
                        <span class="criteria-tag"><%= tax %></span>
                    <% }); %>
                <% } else { %>
                    <span class="criteria-tag"><%= criteria.taxes %></span>
                <% } %>
            <% } %>
        </div>
    </div>
</div>

<style>
.results-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--spacing-xl) var(--spacing-lg);
}

.results-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
}

.results-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-color);
    margin-bottom: var(--spacing-md);
}

.results-header p {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-lg);
}

.refine-button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    background-color: var(--bg-secondary);
    color: var(--text-color);
    padding: var(--spacing-sm) var(--spacing-lg);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition);
}

.refine-button:hover {
    background-color: var(--primary-color);
    color: white;
    border-color: var(--primary-color);
}

.results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-2xl);
}

.location-card {
    background-color: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-xl);
    padding: var(--spacing-xl);
    box-shadow: 0 4px 6px var(--shadow);
    transition: var(--transition);
}

.location-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px var(--shadow);
}

.location-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-lg);
}

.location-header h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-color);
}

.match-score {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: linear-gradient(135deg, var(--success-color), #059669);
    color: white;
    padding: var(--spacing-sm);
    border-radius: var(--radius-md);
    min-width: 60px;
}

.match-score .score {
    font-size: 1.25rem;
    font-weight: 700;
}

.match-score .label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.025em;
}

.location-details {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-lg);
}

.detail-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    color: var(--text-secondary);
}

.detail-item i {
    color: var(--primary-color);
    width: 16px;
}

.location-stats {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
}

.stat {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
}

.stat-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-color);
}

.stat-bar {
    height: 6px;
    background-color: var(--border-color);
    border-radius: var(--radius-sm);
    overflow: hidden;
}

.stat-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    border-radius: var(--radius-sm);
    transition: width 0.5s ease;
}

.learn-more-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
    width: 100%;
    background-color: var(--bg-secondary);
    color: var(--text-color);
    border: 1px solid var(--border-color);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    font-weight: 500;
    cursor: pointer;
    transition: var(--transition);
}

.learn-more-btn:hover {
    background-color: var(--primary-color);
    color: white;
    border-color: var(--primary-color);
}

.criteria-summary {
    background-color: var(--bg-secondary);
    padding: var(--spacing-xl);
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-color);
}

.criteria-summary h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: var(--spacing-lg);
}

.criteria-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
}

.criteria-tag {
    background-color: var(--primary-color);
    color: white;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: capitalize;
}

@media (max-width: 768px) {
    .results-container {
        padding: var(--spacing-lg) var(--spacing-md);
    }

    .results-header h1 {
        font-size: 2rem;
    }

    .results-grid {
        grid-template-columns: 1fr;
    }

    .location-header {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--spacing-md);
    }

    .match-score {
        align-self: flex-end;
    }
}
</style>` }) %>