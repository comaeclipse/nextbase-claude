<%- include('layout', { body:
`<div class="search-container">
    <div class="search-header">
        <h1>Find Your Perfect Retirement Location</h1>
        <p>Tell us what matters most to you, and we'll find locations that match your preferences.</p>
    </div>

    <form class="criteria-form" action="/results" method="POST">
        <div class="form-sections">
            <!-- Geography Section -->
            <div class="form-section">
                <h3><i class="fas fa-globe-americas"></i> Geography & Climate</h3>
                <div class="form-group">
                    <label>Preferred Region</label>
                    <div class="checkbox-group">
                        <label class="checkbox-item">
                            <input type="checkbox" name="regions" value="northeast">
                            <span>Northeast</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="regions" value="southeast">
                            <span>Southeast</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="regions" value="midwest">
                            <span>Midwest</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="regions" value="southwest">
                            <span>Southwest</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="regions" value="west">
                            <span>West Coast</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="regions" value="mountain">
                            <span>Mountain States</span>
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label>Climate Preference</label>
                    <div class="radio-group">
                        <label class="radio-item">
                            <input type="radio" name="climate" value="warm">
                            <span>Warm Year-Round</span>
                        </label>
                        <label class="radio-item">
                            <input type="radio" name="climate" value="mild">
                            <span>Mild Seasons</span>
                        </label>
                        <label class="radio-item">
                            <input type="radio" name="climate" value="four-seasons">
                            <span>Four Distinct Seasons</span>
                        </label>
                        <label class="radio-item">
                            <input type="radio" name="climate" value="cool">
                            <span>Cooler Temperatures</span>
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label>Population Density</label>
                    <div class="radio-group">
                        <label class="radio-item">
                            <input type="radio" name="density" value="urban">
                            <span>Urban/City</span>
                        </label>
                        <label class="radio-item">
                            <input type="radio" name="density" value="suburban">
                            <span>Suburban</span>
                        </label>
                        <label class="radio-item">
                            <input type="radio" name="density" value="rural">
                            <span>Rural/Small Town</span>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Financial Section -->
            <div class="form-section">
                <h3><i class="fas fa-dollar-sign"></i> Financial Considerations</h3>
                <div class="form-group">
                    <label>State Tax Preferences</label>
                    <div class="checkbox-group">
                        <label class="checkbox-item">
                            <input type="checkbox" name="taxes" value="no-income-tax">
                            <span>No State Income Tax</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="taxes" value="low-property-tax">
                            <span>Low Property Tax</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="taxes" value="no-retirement-tax">
                            <span>No Tax on Retirement Income</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="taxes" value="veteran-tax-breaks">
                            <span>Veteran Tax Benefits</span>
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label>Cost of Living Preference</label>
                    <div class="range-group">
                        <input type="range" name="cost-of-living" min="1" max="5" value="3" class="range-slider">
                        <div class="range-labels">
                            <span>Low Cost</span>
                            <span>Moderate</span>
                            <span>Higher Cost</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lifestyle Section -->
            <div class="form-section">
                <h3><i class="fas fa-heart"></i> Lifestyle & Amenities</h3>
                <div class="form-group">
                    <label>Important Amenities</label>
                    <div class="checkbox-group">
                        <label class="checkbox-item">
                            <input type="checkbox" name="amenities" value="healthcare">
                            <span>Quality Healthcare</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="amenities" value="va-facilities">
                            <span>VA Facilities Nearby</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="amenities" value="recreation">
                            <span>Outdoor Recreation</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="amenities" value="culture">
                            <span>Cultural Activities</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="amenities" value="dining">
                            <span>Dining & Entertainment</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="amenities" value="shopping">
                            <span>Shopping Centers</span>
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label>Transportation</label>
                    <div class="checkbox-group">
                        <label class="checkbox-item">
                            <input type="checkbox" name="transportation" value="public-transit">
                            <span>Good Public Transit</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="transportation" value="airport-access">
                            <span>Major Airport Access</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="transportation" value="walkable">
                            <span>Walkable Community</span>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Tech & Gun Laws Section -->
            <div class="form-section">
                <h3><i class="fas fa-laptop"></i> Technology & Legal</h3>
                <div class="form-group">
                    <label>Technology Infrastructure</label>
                    <div class="checkbox-group">
                        <label class="checkbox-item">
                            <input type="checkbox" name="tech" value="high-speed-internet">
                            <span>High-Speed Internet</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="tech" value="tech-hub">
                            <span>Near Tech Hub</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="tech" value="smart-city">
                            <span>Smart City Features</span>
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label>Gun Laws Preference</label>
                    <div class="radio-group">
                        <label class="radio-item">
                            <input type="radio" name="gun-laws" value="constitutional-carry">
                            <span>Constitutional Carry</span>
                        </label>
                        <label class="radio-item">
                            <input type="radio" name="gun-laws" value="shall-issue">
                            <span>Shall Issue CCW</span>
                        </label>
                        <label class="radio-item">
                            <input type="radio" name="gun-laws" value="may-issue">
                            <span>May Issue CCW</span>
                        </label>
                        <label class="radio-item">
                            <input type="radio" name="gun-laws" value="no-preference">
                            <span>No Preference</span>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Community Section -->
            <div class="form-section">
                <h3><i class="fas fa-users"></i> Community</h3>
                <div class="form-group">
                    <label>Community Preferences</label>
                    <div class="checkbox-group">
                        <label class="checkbox-item">
                            <input type="checkbox" name="community" value="veteran-community">
                            <span>Strong Veteran Community</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="community" value="military-friendly">
                            <span>Military-Friendly Businesses</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="community" value="active-seniors">
                            <span>Active Senior Community</span>
                        </label>
                        <label class="checkbox-item">
                            <input type="checkbox" name="community" value="diverse">
                            <span>Diverse Population</span>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="submit-button">
                <span>Find My Perfect Location</span>
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>
</div>

<style>
.search-container {
    max-width: 900px;
    margin: 0 auto;
    padding: var(--spacing-xl) var(--spacing-lg);
}

.search-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
}

.search-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-color);
    margin-bottom: var(--spacing-md);
}

.search-header p {
    font-size: 1.125rem;
    color: var(--text-secondary);
}

.criteria-form {
    background-color: var(--card-bg);
    border-radius: var(--radius-xl);
    padding: var(--spacing-2xl);
    box-shadow: 0 4px 6px var(--shadow);
    border: 1px solid var(--border-color);
}

.form-sections {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2xl);
}

.form-section {
    border-bottom: 1px solid var(--border-color);
    padding-bottom: var(--spacing-xl);
}

.form-section:last-child {
    border-bottom: none;
    padding-bottom: 0;
}

.form-section h3 {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: var(--spacing-lg);
}

.form-section h3 i {
    color: var(--primary-color);
}

.form-group {
    margin-bottom: var(--spacing-lg);
}

.form-group:last-child {
    margin-bottom: 0;
}

.form-group label {
    display: block;
    font-weight: 500;
    color: var(--text-color);
    margin-bottom: var(--spacing-sm);
}

.checkbox-group, .radio-group {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-sm);
}

.checkbox-item, .radio-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm);
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: var(--transition);
}

.checkbox-item:hover, .radio-item:hover {
    background-color: var(--bg-color);
    border-color: var(--primary-color);
}

.checkbox-item input, .radio-item input {
    margin: 0;
}

.range-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.range-slider {
    width: 100%;
    height: 6px;
    border-radius: var(--radius-sm);
    background: var(--border-color);
    outline: none;
    -webkit-appearance: none;
}

.range-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: var(--primary-color);
    cursor: pointer;
}

.range-slider::-moz-range-thumb {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: var(--primary-color);
    cursor: pointer;
    border: none;
}

.range-labels {
    display: flex;
    justify-content: space-between;
    font-size: 0.875rem;
    color: var(--text-secondary);
}

.form-actions {
    margin-top: var(--spacing-2xl);
    text-align: center;
}

.submit-button {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
    color: white;
    padding: var(--spacing-lg) var(--spacing-2xl);
    border: none;
    border-radius: var(--radius-lg);
    font-weight: 600;
    font-size: 1.125rem;
    cursor: pointer;
    transition: var(--transition);
    box-shadow: 0 4px 14px 0 rgba(37, 99, 235, 0.2);
}

.submit-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px 0 rgba(37, 99, 235, 0.3);
}

@media (max-width: 768px) {
    .search-container {
        padding: var(--spacing-lg) var(--spacing-md);
    }

    .search-header h1 {
        font-size: 2rem;
    }

    .criteria-form {
        padding: var(--spacing-xl);
    }

    .checkbox-group, .radio-group {
        grid-template-columns: 1fr;
    }
}
</style>` }) %>